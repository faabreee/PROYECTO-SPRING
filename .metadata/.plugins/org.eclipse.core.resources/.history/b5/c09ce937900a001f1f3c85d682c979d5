package com.example.demo.controller;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/api")
public class UserController {
    @Autowired
    private JdbcTemplate jdbcTemplate;

    @GetMapping("/perfil/{codigoUsuario}")
    public ResponseEntity<User> verPerfilPorCodigo(@PathVariable("codigoUsuario") int codigoUsuario) {
        String sql = "CALL buscar_usuario_por_codigo(?, ?, ?, ?, ?, ?)";
        try {
            Map<String, Object> usuario = jdbcTemplate.queryForMap(sql, codigoUsuario);
            User user = new User();
            user.setSegNombre((String) usuario.get("Seg_Nombre"));
            user.setApellido((String) usuario.get("Apellido"));
            user.setCorreo((String) usuario.get("Correo"));
            user.setTelefono((String) usuario.get("Telefono"));
            // Si el comentario es nulo, asignamos una cadena vacía
            String comentario = usuario.get("Mensaje") != null ? (String) usuario.get("Mensaje") : "";
            user.setComentario(comentario);
            return ResponseEntity.ok(user);
        } catch (Exception e) {
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).body(null);
        }
    }


}
